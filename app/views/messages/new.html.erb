<div class="wrapper">
  <section class="module module-header bg-dark bg-dark-50" data-background="http://i.imgur.com/We1d4f2.jpg" style="background-image: url('http://i.imgur.com/We1d4f2.jpg');">

    <div class="container">

      <!-- MODULE TITLE -->
      <div class="row">

        <div class="col-sm-6 col-sm-offset-3">

          <h1 class="module-title font-alt align-center">Contact</h1>

          <div class="module-subtitle font-inc align-center">
            Inhale the future,<br>Exhale the past.
          </div>

        </div>

      </div>
      <!-- /MODULE TITLE -->

    </div>

  </section>
  <%= form_for @message do |f| %>
    <% if @message.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(@message.errors.count, "error")} prohibited this message from being sent:" %>
        </h2>

        <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        <ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :subject %>
      <%= f.text_field :subject %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <div class="actions">
      <%= f.submit 'Send', class: 'button' %>
    </div>
  <% end %>
</div>
