<div class="wrapper">
  <section class="module module-header bg-dark bg-dark-50" data-background="http://i.imgur.com/Ot51Jac.jpg" style="background-image: url('http://i.imgur.com/Ot51Jac.jpg');">

    <div class="container">

      <!-- MODULE TITLE -->
      <div class="row">

        <div class="col-sm-6 col-sm-offset-3">

          <h1 class="module-title font-alt align-center">Contact</h1>

          <div class="module-subtitle font-inc align-center">
            Inhale the future, exhale the past,<br>Live in the moment.
          </div>

        </div>

      </div>
      <!-- /MODULE TITLE -->

    </div>

  </section>
  !<div class="container">
			<!-- MODULE TITLE -->
			<div class="row">

				<div class="col-sm-6 col-sm-offset-3">

					<h2 class="module-title align-center font-alt">Get in touch</h2>

					<div class="module-subtitle align-center font-inc">
            Email me regarding class scheduling, pricing, group rates, or general questions!
					</div>

				</div>

			</div>
			<!-- /MODULE TITLE -->

			<!-- CONTACT FORM -->
			<div class="row">

				<div class="col-sm-6 col-sm-offset-3">

					<form id="contact-form" role="form" novalidate="">

						<div class="form-group">
							<label class="sr-only" for="cname">Name</label>
							<input type="text" id="cname" class="form-control" name="cname" placeholder="Name" required="" data-validation-required-message="Please enter your name." aria-invalid="false">
							<p class="help-block text-danger"></p>
						</div>

						<div class="form-group">
							<label class="sr-only" for="cemail">Your Email</label>
							<input type="email" id="cemail" name="cemail" class="form-control" placeholder="Your E-mail" required="" data-validation-required-message="Please enter your email address.">
							<p class="help-block text-danger"></p>
						</div>

            <div class="form-group">
              <label class="sr-only" for="cemail">Subject</label>
              <input type="text" id="csubject" name="csubject" class="form-control" placeholder="Subject" required="" data-validation-required-message="Please enter a subject.">
              <p class="help-block text-danger"></p>
            </div>

						<div class="form-group">
							<textarea class="form-control" id="cmessage" name="cmessage" rows="7" placeholder="Message" required="" data-validation-required-message="Please enter your message."></textarea>
							<p class="help-block text-danger"></p>
						</div>

						<button type="submit" class="btn btn-round btn-g">Submit</button>

					</form>

					<!-- Ajax response -->
					<div id="contact-response" class="ajax-response font-alt"></div>

				</div>

			</div>
			<!-- /CONTACT FORM -->

		</div>!

    <div class="row">

      <div class="col-sm-6 col-sm-offset-3">
        <div id="contact-form">
          <%= form_for @message, html: {id: "contact-form"} do |f| %>

          <div class="form-group">
            <%= f.text_field :name, html: {class: "form-control", id: "cname", name: "cname"}, placeholder: "Name" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, html: {class: "form-control", id: "cemail", name: "cemail"}, placeholder: "Your Email" %>
          </div>

          <div class="form-group">
            <%= f.text_field :subject, html: {class: "form-control", id: "csubject", name: "csubject"}, placeholder: "Subject" %>
          </div>

          <div class="form-group">
            <%= f.text_area :content, html: {class: "form-control", id: "cmessage", name: "cmessage", rows: "7"}, placeholder: "Message" %>
          </div>

          <%= f.submit 'Send', class: 'button' %>
          <% end %>
        </div>
      </div>
    </div>
</div>
